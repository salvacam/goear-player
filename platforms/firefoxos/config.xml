<?xml version='1.0' encoding='utf-8'?>
<widget id="mx.x10.salvacam.goear" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <feature name="Device">
        <param name="firefoxos-package" value="Device" />
    </feature>
    <feature name="Notification">
        <param name="firefoxos-package" value="Notification" />
    </feature>
    <name>Goear Player</name>
    <description>
        Reproductor goear
    </description>
    <author email="salvacams@gmail.com" href="http://salvacam.x10.mx">
        Salvador Camacho
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
