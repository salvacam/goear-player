<?xml version='1.0' encoding='utf-8'?>
<widget id="mx.x10.salvacam.goear" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Goear Player</name>
    <description>
        Reproductor goear
    </description>
    <author email="salvacams@gmail.com" href="http://salvacam.x10.mx">
        Salvador Camacho
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-device"/>
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="de.appplant.cordova.plugin.local-notification"/>
    <plugin name="cordova-plugin-dialogs"/>
    <plugin name="org.apache.cordova.network-information"/>
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
